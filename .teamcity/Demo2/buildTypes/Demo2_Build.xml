<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2018.1/project-config.xsd">
  <name>Build</name>
  <description />
  <settings>
    <options>
      <option name="artifactRules" value="target =&gt; target" />
    </options>
    <disabled-settings>
      <setting-ref ref="ARTIFACT_DEPENDENCY_1" />
      <setting-ref ref="TRIGGER_2" />
    </disabled-settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_1" name="" type="Maven2">
        <parameters>
          <param name="goals" value="clean test" />
          <param name="localRepoScope" value="agent" />
          <param name="maven.path" value="%teamcity.tool.maven.DEFAULT%" />
          <param name="pomLocation" value="pom.xml" />
          <param name="runnerArgs" value="-Dmaven.test.failure.ignore=true" />
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcity.tool.jacoco" value="%teamcity.tool.jacoco.DEFAULT%" />
          <param name="userSettingsSelection" value="userSettingsSelection:default" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="jark" type="Maven2">
        <parameters>
          <param name="goals" value="package" />
          <param name="localRepoScope" value="agent" />
          <param name="maven.path" value="%teamcity.tool.maven.DEFAULT%" />
          <param name="pomLocation" value="pom.xml" />
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcity.tool.jacoco" value="%teamcity.tool.jacoco.DEFAULT%" />
          <param name="userSettingsSelection" value="userSettingsSelection:default" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="Stop carts service (1)" type="ssh-exec-runner">
        <parameters>
          <param name="jetbrains.buildServer.deployer.targetUrl" value="web" />
          <param name="jetbrains.buildServer.deployer.username" value="taras" />
          <param name="jetbrains.buildServer.sshexec.authMethod" value="CUSTOM_KEY" />
          <param name="jetbrains.buildServer.sshexec.command" value="sudo systemctl stop carts" />
          <param name="jetbrains.buildServer.sshexec.keyFile" value="/home/taras/.ssh/id_rsa" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_4" name="copy to remote" type="ssh-deploy-runner">
        <parameters>
          <param name="jetbrains.buildServer.deployer.sourcePath" value="target/carts.jar" />
          <param name="jetbrains.buildServer.deployer.ssh.transport" value="jetbrains.buildServer.deployer.ssh.transport.scp" />
          <param name="jetbrains.buildServer.deployer.targetUrl" value="10.166.0.5:/home/taras" />
          <param name="jetbrains.buildServer.deployer.username" value="taras" />
          <param name="jetbrains.buildServer.sshexec.authMethod" value="CUSTOM_KEY" />
          <param name="jetbrains.buildServer.sshexec.keyFile" value="/home/taras/.ssh/id_rsa" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_5" name="Reload systemctl" type="ssh-exec-runner">
        <parameters>
          <param name="jetbrains.buildServer.deployer.targetUrl" value="10.166.0.5" />
          <param name="jetbrains.buildServer.deployer.username" value="taras" />
          <param name="jetbrains.buildServer.sshexec.authMethod" value="CUSTOM_KEY" />
          <param name="jetbrains.buildServer.sshexec.command" value="sudo systemctl daemon-reload" />
          <param name="jetbrains.buildServer.sshexec.keyFile" value="/home/taras/.ssh/id_rsa" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_6" name="Run carts" type="ssh-exec-runner">
        <parameters>
          <param name="jetbrains.buildServer.deployer.targetUrl" value="10.166.0.5" />
          <param name="jetbrains.buildServer.deployer.username" value="taras" />
          <param name="jetbrains.buildServer.sshexec.authMethod" value="CUSTOM_KEY" />
          <param name="jetbrains.buildServer.sshexec.command" value="sudo systemctl start carts" />
          <param name="jetbrains.buildServer.sshexec.keyFile" value="/home/taras/.ssh/id_rsa" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Demo2_HttpsGithubComTarasKindratCartsGitRefsHeadsMaster" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_1" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
      <build-trigger id="TRIGGER_2" type="buildDependencyTrigger">
        <parameters>
          <param name="afterSuccessfulBuildOnly" value="true" />
          <param name="branchFilter" value="+:&lt;default&gt;" />
          <param name="dependsOn" value="Demo2_Build" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_1" sourceBuildTypeId="Demo2_Build" cleanDestination="false">
        <revisionRule name="lastSuccessful" revision="latest.lastSuccessful" />
        <artifact sourcePath="target =&gt; target" />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="Demo2_Deploy">
        <options>
          <option name="run-build-if-dependency-failed" value="RUN_ADD_PROBLEM" />
          <option name="run-build-if-dependency-failed-to-start" value="RUN_ADD_PROBLEM" />
          <option name="take-started-build-with-same-revisions" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

